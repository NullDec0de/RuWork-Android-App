<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_210sdp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_service_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#e6e7e8"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp">


                    <com.dreamguys.truelysell.viewwidgets.CircleImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"

                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/usericnew"
                        app:civ_border_color="@color/colorPink"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_service_price"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Food"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_9sdp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_lovtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_below="@+id/tv_service_price"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:backgroundTint="@color/quantum_yellow"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Food"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:elevation="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"

                android:layout_marginBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_popular_services"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_rect_round_corner_pink" />

                <TextView
                    android:id="@+id/tv_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/iv_popular_services"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Popular Services"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_service_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icFav"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/bg_gradient_color_circle"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Food"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_9sdp" />




<!--                <TextView-->
<!--                    android:id="@+id/tv_service_price"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_marginRight="@dimen/_5sdp"-->
<!--                    android:text="$140"-->
<!--                    android:textColor="@android:color/white"-->
<!--                    android:textSize="@dimen/_14sdp"-->
<!--                    android:textStyle="bold" />-->

                <com.dreamguys.truelysell.FavouriteAnimationLib.LikeButton
                    android:id="@+id/icFav"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    app:anim_scale_factor="2"
                    app:icon_size="15dp"
                    app:icon_type="heart" />

                <RatingBar
                    android:id="@+id/rb_rating"
                    style="@style/RatingBarSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_service_name"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toRightOf="@+id/iv_popular_services"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/colorYellow"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tv_total_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_service_name"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/rb_rating"
                    android:text="(4.0)"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_gradient_color_black" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>