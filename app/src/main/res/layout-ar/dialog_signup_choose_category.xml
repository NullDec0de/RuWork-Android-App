<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/shape_rect_round_corner_white"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_professional" />

            <TextView
                android:id="@+id/tv_professional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:background="@color/colorDarkGray" />

            <LinearLayout
                android:id="@+id/ll_choose_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_what_service_do_you_provide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/txt_what_service_do_you_provide"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_textview_background_gray"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/txt_select_your_service_here"
                    android:textColor="#8B8B8B" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_reg_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:ems="8"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/txt_login"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                    <Button
                        android:id="@+id/btn_get_started"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:ems="8"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/txt_get_started"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choose_subcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_choose_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/txt_choose_sub_category"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/tv_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_textview_background_gray"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/txt_select_your_subcategory"
                    android:textColor="#8B8B8B" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:ems="7"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/txt_previous"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:ems="7"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/txt_next"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:checkedButton="@+id/userrdbtn"
                        android:id="@+id/usergrprg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/control_switch_background_border"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="3dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:id="@+id/userrdbtn"
                            android:background="@drawable/control_switch_background_selector_middle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:text="User"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@drawable/control_switch_color_selector"/>

                        <RadioButton
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="3dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:id="@+id/providerrdbtn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/control_switch_background_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Provider"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@drawable/control_switch_color_selector" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_professional" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorLightGray"
                        android:hint="@string/txt_name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorDarkGray"
                        android:textColorHint="@color/colorDarkGray"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_mail_36" />

                    <EditText
                        android:id="@+id/et_email_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorLightGray"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorDarkGray"
                        android:textColorHint="@color/colorDarkGray"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_baseline_lock_24" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorLightGray"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorDarkGray"
                        android:textColorHint="@color/colorDarkGray"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_phone_36" />

                    <EditText
                        android:id="@+id/et_country_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:backgroundTint="@color/colorLightGray"
                        android:clickable="true"
                        android:ems="3"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="@string/txt_code"
                        android:visibility="gone"
                        android:textColor="@color/colorDarkGray"
                        android:textColorHint="@color/colorDarkGray"
                        android:textSize="@dimen/_11sdp" />

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/cccp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:ccp_textSize="13sp"
                        app:ccp_showFlag="false"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_32sdp" />


                    <EditText
                        android:id="@+id/et_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:backgroundTint="@color/colorLightGray"
                        android:hint="@string/txt_mobile_number"
                        android:inputType="phone|textNoSuggestions"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorDarkGray"
                        android:textColorHint="@color/colorDarkGray"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_referral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_professional" />

                    <EditText
                        android:id="@+id/et_refferalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorLightGray"
                        android:hint="@string/txt_refferal_code"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorDarkGray"
                        android:textColorHint="@color/colorDarkGray"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_existing_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPink"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Already Have an Account"
                    android:textColor="@color/colorDarkGray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <CheckBox
                        android:id="@+id/agretccchk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPink"
                        android:gravity="center_vertical"
                        android:text="I Agree to"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvatc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/agretccchk"
                        android:layout_toRightOf="@+id/agretccchk"
                        android:text="@string/t_c"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvandtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/tvatc"
                        android:layout_toRightOf="@+id/tvatc"
                        android:text="and"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvprivacyaccept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/tvandtxt"
                        android:layout_toRightOf="@+id/tvandtxt"
                        android:text="Privacy Policy"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:ems="7"
                        android:visibility="gone"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/txt_login"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_gradient_color_circle"
                        android:ems="7"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/txt_register"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_forgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="@dimen/_5sdp"
                    android:text="Forgot Password"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <include layout="@layout/dialog_otp_verification" />


        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/bg_gradient_color_circle"
        android:elevation="@dimen/_5sdp"
        android:src="@drawable/ic_clear" />
</FrameLayout>


